<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.View.UserViewController">

    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Label text="Gerenciador de Funcionários" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;"/>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="txtName" promptText="Nome Completo" prefWidth="200"/>
        <TextField fx:id="txtSalary" promptText="Salário" prefWidth="100"/>
        <ComboBox fx:id="cbRole" promptText="Selecione o cargo" prefWidth="150"/>

        <Button fx:id="btnSave" text="Add" onAction="#onSave"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

        <Button fx:id="btnCancel" text="Cancel" onAction="#onCancel" visible="false"
                style="-fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-cursor: hand;"/>
    </HBox>

    <Separator/>

    <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
        <columns>
            <TableColumn fx:id="colId" text="ID" maxWidth="50" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colName" text="Nome"/>
            <TableColumn fx:id="colSalary" text="Salário"/>
            <TableColumn fx:id="colRole" text="Cargo" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="colActions" text="Ações" maxWidth="120" style="-fx-alignment: CENTER;"/>
        </columns>
    </TableView>

    <Label fx:id="lblStatus" text="Sistema Funcionando." style="-fx-text-fill: #666;"/>
</VBox>